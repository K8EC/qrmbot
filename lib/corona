#!/usr/bin/perl

# coronavirus info for qrmbot
# initial version by aa4jq
# modified by k2cr

use strict;
use utf8;
use feature 'unicode_strings';
binmode(STDOUT, ":utf8");
use Encode qw(decode);
use I18N::Langinfo qw(langinfo CODESET);

use File::Basename;
